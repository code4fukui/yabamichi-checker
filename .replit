run = [
    "deno",
    "run",
    "--lock=lock.json",
    "--lock-write",
    "--allow-all",
    "main.js"
]

hidden = [".deno"]

entrypoint = "main.js"

[languages.deno]
pattern = "**/*.{ts,js}"
[languages.deno.languageServer]
start = ["deno", "lsp"]
[languages.deno.languageServer.initializationOptions]
enable = true
lint = true

[env]
DENO_DIR = "/home/runner/${REPL_SLUG}/.deno"

[nix]
channel = "stable-22_11"
